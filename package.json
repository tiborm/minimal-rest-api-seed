        "@types/express": "^4.17.21",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.11.26",
        "nodemon": "^3.1.0",
        "npm-run-all": "^4.1.5",
        "rimraf": "^5.0.5",
        "typescript": "^5.4.2"
    }
